<?xml version="1.0" encoding="utf-8"?>

<!-- With scroll flags for CoordinatorLayouts with scrollable children to support app bar scrolling on L+. -->
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sgToolbar"
    style="@style/Widget.SeriesGuide.ActionBar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/colorPrimary"
    android:theme="?attr/actionBarTheme"
    app:layout_scrollFlags="scroll|enterAlways|snap"
    app:popupTheme="?attr/actionBarPopupTheme">

    <!-- Inline progress bar used as a sync indicator. -->
    <ProgressBar
        android:id="@+id/progressBarTabs"
        android:layout_width="32dp"
        android:layout_height="32dp" />

</androidx.appcompat.widget.Toolbar>
